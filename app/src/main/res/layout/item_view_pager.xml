<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:background="@color/colorBlueLight"
    android:contentDescription="@string/app_name"
    app:shapeAppearanceOverlay="@style/roundCorners">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/viewpager_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/colorBlueLight"
        android:contentDescription="@string/app_name"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:shapeAppearanceOverlay="@style/roundCorners" />

    <View
        android:layout_width="@dimen/zero_dimen"
        android:layout_height="@dimen/_140sdp"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewPagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/viewpagerDescription"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Search" />

    <TextView
        android:id="@+id/viewpagerDescription"
        android:layout_width="@dimen/zero_dimen"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/lorem_ipsum" />

</androidx.constraintlayout.widget.ConstraintLayout>