<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.pixar.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_wallpaperFragment"
            app:destination="@id/wallpaperFragment" />
    </fragment>
    <fragment
        android:id="@+id/wallpaperFragment"
        android:name="com.example.pixar.fragments.WallpaperFragment"
        android:label="fragment_wallpaper"
        tools:layout="@layout/fragment_wallpaper" >
        <action
            android:id="@+id/action_wallpaperFragment_to_downloadBottomSheetFragment"
            app:destination="@id/downloadBottomSheetFragment" />
        <action
            android:id="@+id/action_wallpaperFragment_to_wallpaperBottomSheetFragment"
            app:destination="@id/wallpaperBottomSheetFragment" />
        <argument
            android:name="photo"
            app:argType="com.example.pixar.model.UnsplashPhoto" />
    </fragment>
    <dialog
        android:id="@+id/downloadBottomSheetFragment"
        android:name="com.example.pixar.bottomsheets.DownloadBottomSheetFragment"
        android:label="download_bottom_sheet"
        tools:layout="@layout/download_bottom_sheet" >
        <argument
            android:name="photo"
            app:argType="com.example.pixar.model.UnsplashPhoto" />
    </dialog>
    <dialog
        android:id="@+id/wallpaperBottomSheetFragment"
        android:name="com.example.pixar.bottomsheets.WallpaperBottomSheetFragment"
        android:label="wallpaper_bottom_sheet"
        tools:layout="@layout/wallpaper_bottom_sheet" >
        <argument
            android:name="photo"
            app:argType="com.example.pixar.model.UnsplashPhoto" />
    </dialog>

</navigation>